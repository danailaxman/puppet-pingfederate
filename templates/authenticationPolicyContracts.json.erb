<%# turn the the core and extended attribute arrays into JSON. -%>
<%# A little ugly since JSON doesn't allow final commas in lists -%>
{
  "name": "<%= @b["name"] -%>",
  "coreAttributes": [
<% @b["core_attrs"].each_with_index do |val, i| -%>
    { "name": "<%= val -%>" }<%= ',' if i < (@b["core_attrs"].size - 1) %>
<% end -%>
  ], 
  "extendedAttributes": [
<% @b["extd_attrs"].each_with_index  do |val, i| -%>
    { "name": "<%= val -%>" }<%= ',' if i < (@b["extd_attrs"].size - 1) %>
<% end -%>
  ]
}
